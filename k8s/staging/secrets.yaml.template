# Staging Secrets Template
# DO NOT commit actual secrets - use sealed-secrets or external-secrets in production
# This file is a template showing required secrets

apiVersion: v1
kind: Secret
metadata:
  name: aivo-staging-secrets
  namespace: staging
  labels:
    app: aivo
    environment: staging
type: Opaque
stringData:
  # Database credentials
  db-user: "aivo_staging"
  db-password: "REPLACE_WITH_ACTUAL_PASSWORD"
  database-url: "postgresql://aivo_staging:REPLACE_WITH_ACTUAL_PASSWORD@postgres:5432/aivo_staging?schema=public"
  
  # Redis
  redis-url: "redis://redis:6379"
  
  # NextAuth
  nextauth-secret: "REPLACE_WITH_32_CHAR_SECRET"
  
  # OpenAI API
  openai-api-key: "REPLACE_WITH_API_KEY"
  
  # Sentry
  sentry-dsn: "REPLACE_WITH_SENTRY_DSN"
  
  # Test user credentials for E2E tests
  test-user-email: "test-learner@aivo.test"
  test-user-password: "TestPassword123!"
