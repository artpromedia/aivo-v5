# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@host:5432/aivo_v5_prod"

# ============================================
# REDIS CACHE
# ============================================
REDIS_URL="redis://redis:6379"
REDIS_PASSWORD=""
REDIS_TLS_ENABLED=false

# ============================================
# NEXTAUTH AUTHENTICATION
# ============================================
NEXTAUTH_URL="https://aivo.education"
NEXTAUTH_SECRET="your-production-secret-min-32-characters-here"

# ============================================
# OAUTH PROVIDERS
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (optional)
GITHUB_ID=""
GITHUB_SECRET=""

# ============================================
# AI SERVICES
# ============================================
# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_ORG_ID="org-your-organization-id"
OPENAI_MODEL="gpt-4-turbo-preview"

# Google Cloud Speech-to-Text
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_KEY_FILE="/path/to/service-account-key.json"
SPEECH_API_URL="https://speech.googleapis.com/v1/speech:recognize"
SPEECH_API_KEY="your-google-speech-api-key"

# ============================================
# CLOUD STORAGE (AWS S3)
# ============================================
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="aivo-uploads-prod"
S3_PUBLIC_URL="https://aivo-uploads-prod.s3.amazonaws.com"

# ============================================
# PAYMENTS (STRIPE)
# ============================================
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_PRICE_ID_BASIC="price_basic_monthly"
STRIPE_PRICE_ID_PRO="price_pro_monthly"
STRIPE_PRICE_ID_ENTERPRISE="price_enterprise_monthly"

# ============================================
# EMAIL SERVICE (SENDGRID)
# ============================================
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
FROM_EMAIL="noreply@aivo.education"
REPLY_TO_EMAIL="support@aivo.education"
SUPPORT_EMAIL="support@aivo.education"

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN="your-mixpanel-token"

# Sentry Error Tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="aivo"
SENTRY_PROJECT="aivo-platform"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
NEXT_PUBLIC_SENTRY_DSN="https://your-public-sentry-dsn@sentry.io/project-id"

# PostHog (optional)
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ============================================
# AGENT SERVER
# ============================================
AGENT_SERVER_URL="wss://agents.aivo.education"
AGENT_SERVER_PORT=3001
AGENT_SERVER_SECRET="your-agent-server-secret"

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SPEECH_THERAPY=true
ENABLE_TEAM_FEATURES=true
ENABLE_PREMIUM_CONTENT=true
ENABLE_MOBILE_APP=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_WINDOW_MS=3600000

# ============================================
# SECURITY
# ============================================
ALLOWED_ORIGINS="https://aivo.education,https://www.aivo.education,https://app.aivo.education"
CORS_CREDENTIALS=true
SECURE_COOKIES=true
CSRF_SECRET="your-csrf-secret-min-32-chars"

# ============================================
# LOGGING
# ============================================
LOG_LEVEL="info"
LOG_FORMAT="json"
ENABLE_REQUEST_LOGGING=true

# ============================================
# CRON JOBS
# ============================================
ENABLE_CRON=true
BACKUP_CRON_SCHEDULE="0 2 * * *"
CLEANUP_CRON_SCHEDULE="0 3 * * *"
ANALYTICS_CRON_SCHEDULE="0 1 * * *"

# ============================================
# MOBILE APP
# ============================================
EXPO_PUBLIC_API_URL="https://api.aivo.education"
EXPO_PUBLIC_WS_URL="wss://agents.aivo.education"

# ============================================
# WEBHOOKS
# ============================================
WEBHOOK_SECRET="your-webhook-secret-for-external-services"

# ============================================
# CDN & ASSETS
# ============================================
CDN_URL="https://cdn.aivo.education"
STATIC_ASSETS_URL="https://static.aivo.education"

# ============================================
# PERFORMANCE
# ============================================
MAX_FILE_UPLOAD_SIZE=10485760
REQUEST_TIMEOUT=30000
DATABASE_POOL_SIZE=20

# ============================================
# TIMEZONE
# ============================================
TZ="America/New_York"
