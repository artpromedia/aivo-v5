# Dockerfile for Agent Server
FROM node:25-alpine AS base

FROM base AS deps
RUN apk add --no-cache libc6-compat openssl
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY packages/*/package.json ./packages/
COPY services/*/package.json ./services/

# Install dependencies
RUN pnpm install --frozen-lockfile

FROM base AS builder
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy dependencies
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/packages ./packages
COPY --from=deps /app/services ./services

# Copy source code
COPY . .

# Generate Prisma Client
RUN pnpm prisma generate

# Build packages
RUN pnpm --filter "@aivo/*" build

# Build agent orchestrator service
RUN pnpm --filter brain-orchestrator build

FROM base AS runner
WORKDIR /app

ENV NODE_ENV production

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 agentuser

# Copy built files
COPY --from=builder /app/services/brain-orchestrator/dist ./dist
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/prisma ./prisma

USER agentuser

EXPOSE 3001

ENV PORT 3001

CMD ["node", "dist/server.js"]
