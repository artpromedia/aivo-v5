{
  "name": "@aivo/validation",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas/*": {
      "import": "./dist/schemas/*.mjs",
      "require": "./dist/schemas/*.js",
      "types": "./dist/schemas/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/schemas/*.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/schemas/*.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.23.8",
    "isomorphic-dompurify": "^2.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "next": ">=14.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  }
}
