# Run lint-staged for linting and formatting
pnpm lint:staged

# Type check only changed TypeScript files
# Get list of staged .ts and .tsx files
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' | tr '\n' ' ')

if [ -n "$STAGED_TS_FILES" ]; then
  echo "ğŸ” Running type check on staged TypeScript files..."
  pnpm typecheck
fi

echo "âœ… Pre-commit checks passed!"
