{
  "name": "aivo-monorepo",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=apps/web... --filter=apps/learner-web... --filter=apps/parent-teacher-web... --filter=apps/admin-web...",
    "dev:mobile": "turbo dev --filter=mobile/learner-mobile... --filter=mobile/parent-teacher-mobile...",
    "dev:services": "turbo dev --filter=services/*",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "lint:staged": "lint-staged",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:ci": "jest --ci --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=json-summary",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:changed": "jest --onlyChanged",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "ts-node --transpile-only scripts/seed-tenants-and-users.ts",
    "seed:dev-users": "ts-node --transpile-only scripts/seed-dev-users.ts",
    "clean:bom": "node scripts/strip-bom.js",
    "postinstall": "pnpm run clean:bom",
    "prepare": "husky",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "expo-secure-store": "~13.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.38",
    "prettier": "^3.3.0",
    "prisma": "^6.0.0",
    "tailwindcss": "^3.4.4",
    "ts-jest": "^29.1.1",
    "turbo": "^2.6.1",
    "typescript": "6.0.0-dev.20251120"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,mdx,css,scss}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "expo": "~52.0.47",
    "react": "18.3.1",
    "react-native": "0.76.9"
  },
  "version": "1.0.0"
}
