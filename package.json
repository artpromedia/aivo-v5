{
  "name": "aivo-monorepo",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=apps/web... --filter=apps/learner-web... --filter=apps/parent-teacher-web... --filter=apps/admin-web...",
    "dev:mobile": "turbo dev --filter=mobile/learner-mobile... --filter=mobile/parent-teacher-mobile...",
    "dev:services": "turbo dev --filter=services/*",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "ts-node --transpile-only scripts/seed-tenants-and-users.ts",
    "seed:dev-users": "ts-node --transpile-only scripts/seed-dev-users.ts",
    "clean:bom": "node scripts/strip-bom.js",
    "postinstall": "pnpm run clean:bom"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "expo-secure-store": "~13.0.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.0",
    "prisma": "^6.0.0",
    "tailwindcss": "^3.4.4",
    "ts-jest": "^29.1.1",
    "turbo": "^2.6.1",
    "typescript": "6.0.0-dev.20251120"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@prisma/client": "6.19.0"
  }
}
