# Environment Configuration
NODE_ENV=development
PORT=3000

# =============================================================================
# AI PROVIDER API KEYS (Multi-Provider AI System)
# =============================================================================
# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic (https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Google AI / Gemini (https://aistudio.google.com/app/apikey)
GOOGLE_AI_API_KEY=AIza-your_google_ai_api_key_here

# Cohere (https://dashboard.cohere.com/api-keys)
COHERE_API_KEY=your_cohere_api_key_here

# Mistral (https://console.mistral.ai/)
MISTRAL_API_KEY=your_mistral_api_key_here

# HuggingFace (https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here

# Groq (https://console.groq.com/keys)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Together AI (https://api.together.xyz/settings/api-keys)
TOGETHER_API_KEY=your_together_api_key_here

# Replicate (https://replicate.com/account/api-tokens)
REPLICATE_API_KEY=r8_your_replicate_api_key_here

# Azure OpenAI (optional)
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# AWS Bedrock (optional - uses AWS credentials)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
MODEL_DISPATCH_PORT=4001
AI_SERVICE_DEFAULT_TIMEOUT=30000
AI_SERVICE_MAX_RETRIES=3

# Cost Alerts (in USD)
AI_DAILY_BUDGET_ALERT=100
AI_MONTHLY_BUDGET_LIMIT=3000

# Database Configuration (Prisma)
# PostgreSQL connection string format:
# postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://your_db_user:your_db_password@localhost:5433/aivo_v5?schema=public"
# Direct URL for migrations (if using connection pooling)
DIRECT_URL="postgresql://your_db_user:your_db_password@localhost:5433/aivo_v5?schema=public"

# Legacy Database Configuration (deprecated - use DATABASE_URL instead)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=aivo_v5
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_chars

# Google OAuth (Get from https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Logging
LOG_LEVEL=info

# Security (deprecated - use NEXTAUTH_SECRET instead)
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Internal API Keys (comma-separated, for service-to-service calls that bypass rate limiting)
INTERNAL_API_KEYS=

# Redis URL (for rate limiting, caching, sessions)
# REDIS_URL=redis://localhost:6379