# Application Settings
APP_NAME=AIVO Learning Backend
APP_VERSION=5.0.0
DEBUG=false
ENVIRONMENT=production
SECRET_KEY=your-secret-key-here-change-in-production
API_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/aivo_learning
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# Authentication
JWT_SECRET_KEY=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRATION_DAYS=30

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-org-id
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Speech Services
GOOGLE_SPEECH_API_KEY=
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=aivo-learning-assets

# Email Service
SENDGRID_API_KEY=
FROM_EMAIL=noreply@aivolearning.com
SUPPORT_EMAIL=support@aivolearning.com

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=false

# CORS
CORS_ORIGINS=["http://localhost:3000","https://aivolearning.com"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Feature Flags
ENABLE_VIRTUAL_BRAIN=true
ENABLE_SPEECH_ANALYSIS=true
ENABLE_CONTENT_ADAPTATION=true
ENABLE_REAL_TIME_COLLABORATION=true

