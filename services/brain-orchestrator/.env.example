# Brain Orchestrator Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=4003
HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Authentication
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Redis Configuration (Optional - for horizontal scaling)
# Uncomment to enable Redis Pub/Sub for multiple server instances
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# SSL/TLS Configuration (Production)
# Enable for secure WebSocket connections (wss://)
SSL_ENABLED=false
# SSL_KEY_PATH=/path/to/private-key.pem
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_CA_PATH=/path/to/ca-bundle.pem
# SSL_PASSPHRASE=your-passphrase

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aivo

# Prisma Configuration
PRISMA_SCHEMA_PATH=../../prisma/schema.prisma
